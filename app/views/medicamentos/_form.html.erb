<%= form_for(@medicamento) do |f| %>
  <% if @medicamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medicamento.errors.count, "error") %> proibiu esse medicamento de ser salvo:</h2>

      <ul>
      <% @medicamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <br />
    <%= f.label :abreviacao %>
    <%= f.text_field :abreviacao %>
  </div>
  <div class="field">
    <br />
    <%= f.label :classe %>
    <%= f.text_field :classe %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit(:value => "Cadastrar") %>
  </div>
<% end %>
